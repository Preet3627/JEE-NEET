# --- Core Application Settings ---
# Database connection details
DB_HOST="your_mysql_host"
DB_USER="your_mysql_user"
DB_PASSWORD="your_mysql_password"
DB_NAME="your_mysql_database_name"

# Secret key for JWT (JSON Web Tokens) used for authentication
JWT_SECRET="a_strong_random_secret_key_for_jwt"

# Encryption key for sensitive user data stored in the database
# Should be a 32-byte hex string (64 characters) or a strong passphrase
ENCRYPTION_KEY="a_strong_random_32_byte_encryption_key_hex_or_passphrase"

# Google OAuth Client ID for Google Sign-In (obtained from Google Cloud Console)
GOOGLE_CLIENT_ID="your_google_oauth_client_id"

# API Key for Google Generative AI (Gemini) models
API_KEY="your_google_generative_ai_api_key"

# --- Email/SMTP Settings (for password reset, email verification) ---
# SMTP Host (e.g., smtp.sendgrid.net, smtp.gmail.com)
SMTP_HOST="your_smtp_host"
# SMTP Port (e.g., 587 for TLS, 465 for SSL)
SMTP_PORT="587"
# Use SSL/TLS for SMTP (true or false)
SMTP_SECURE="false"
# SMTP Username
SMTP_USER="your_smtp_username"
# SMTP Password
SMTP_PASS="your_smtp_password"
# Email address to send from
SMTP_FROM="no-reply@yourdomain.com"

# --- Nextcloud/WebDAV Settings (for study material and music storage) ---
# Base URL of your Nextcloud instance or WebDAV server
NEXTCLOUD_URL="https://your.nextcloud.instance"

# WebDAV Share Token and Password for Study Materials (e.g., a public link token and password)
NEXTCLOUD_SHARE_TOKEN="your_study_material_webdav_token"
NEXTCLOUD_SHARE_PASSWORD="your_study_material_webdav_password"

# WebDAV Share Token and Password for Music (can be different from study materials)
NEXTCLOUD_MUSIC_SHARE_TOKEN="your_music_webdav_token"
NEXTCLOUD_MUSIC_SHARE_PASSWORD="your_music_webdav_password"

# --- Push Notifications (VAPID keys for Web Push) ---
# Public key for VAPID (Voluntary Application Server Identification) for push notifications
# Generate a new pair (e.g., using web-push library)
VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key" # IMPORTANT: Keep this secret in production!

# --- Server Port (Vercel typically handles this, but for local dev) ---
PORT="3001"

# --- Node.js Environment (Vercel usually sets this to 'production') ---
NODE_ENV="development"
